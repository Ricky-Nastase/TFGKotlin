<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/light_grey"
    android:paddingStart="30dp"
    android:paddingTop="15dp"
    android:paddingEnd="30dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/txtDeletePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="¿DESEA ELIMINAR ESTA PUBLICACIÓN?"
        android:textColor="@color/granet"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/deleteTeamLayoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDeletePost">

        <Button
            android:id="@+id/cancelDeletePost"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/simple_granet_btn"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="CANCELAR"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deletePost"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/red_stroke_custom"
            android:maxLength="20"
            android:text="ELIMINAR"
            android:textColor="@color/granet"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>