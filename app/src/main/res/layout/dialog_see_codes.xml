<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/light_grey"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingTop="15dp"
    android:paddingEnd="40dp"
    android:paddingBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/c_digo_administrador"
        android:textColor="@color/granet"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/seeCodeAdmin"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/small_red_stroke_corners"
        android:gravity="center"
        android:longClickable="false"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/c_digo_jugador"
        android:textColor="@color/granet"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/seeCodePlayer"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/small_red_stroke_corners"
        android:gravity="center"
        android:longClickable="false"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

</LinearLayout>